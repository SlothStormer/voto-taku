---
import videobg from "../assets/videobg.mp4";
import ToggleMute from "./ToggleMute.svelte";
---

<i id="pixel"></i>
<video id="video" autoplay muted loop>
  <source src={videobg} type="video/mp4" />
</video>
<ToggleMute client:only />

<style>
  #video {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  #pixel{
    position: fixed;
    z-index: 0;
    width: 100%;
    height: 100%;
    background-image: url("/pixel.webp");
    background-repeat: repeat;
  }

  video {
    max-width: none;
  }
</style>
