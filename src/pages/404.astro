---
import Yanami from '../assets/yanami2.gif'
---

<html>
    <head>
        <title>Pagina no encontrada</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="bg-purple-950 flex items-center justify-center h-screen m-0 p-0">
        <div class="bg-white bg-opacity-20 backdrop-blur-lg p-6 rounded-2xl shadow-lg text-center max-w-md w-full h-2/3 flex flex-col items-center justify-between">
            <div class="mb-6">
                <h1 class="text-6xl font-bold text-white">404 :(</h1>
                <p class="text-2xl text-gray-300 mt-2">Pagina no encontrada</p>
            </div>
            
            <img src={Yanami.src} alt="Yanami gif :D" 
                class="w-64 h-auto mx-auto rounded-lg border-4 border-purple-500 shadow-md hover:scale-105 transition-transform duration-300 mb-6">
            
            <a href="/" 
                class="inline-block bg-purple-600 text-white text-lg font-semibold px-6 py-3 rounded-lg hover:bg-purple-500 hover:shadow-lg transition-all duration-200">
                Volver al inicio
            </a>
        </div>
    </body>
</html>